<UserControl x:Class="BrawlInstaller.Views.StageListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BrawlInstaller.Views"
             xmlns:resources="clr-namespace:BrawlInstaller.Resources"
             xmlns:viewModels="clr-namespace:BrawlInstaller.ViewModels" d:DataContext="{d:DesignInstance Type=viewModels:StageListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="stageListsComboBox" ItemsSource="{Binding StageLists}" VerticalAlignment="Top" HorizontalAlignment="Left" SelectedValue="{Binding SelectedStageList, Mode=TwoWay}" Width="120" DisplayMemberPath="Name"/>
        <TabControl x:Name="pageTabControl" SelectedIndex="0" ItemsSource="{Binding SelectedStageList.Pages}" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1" Width="Auto" Height="Auto">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding PageNumber}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ListBox x:Name="stageListBox" ItemsSource="{Binding StageSlots}" VerticalAlignment="Top" HorizontalAlignment="Left" DisplayMemberPath="Name" Width="120" Height="Auto" MaxHeight="400" MinHeight="240"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>
