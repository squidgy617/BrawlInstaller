<UserControl x:Class="BrawlInstaller.Views.StageEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BrawlInstaller.Views"
             xmlns:resources="clr-namespace:BrawlInstaller.Resources"
             xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
             xmlns:enums="clr-namespace:BrawlInstaller.Enums"
             xmlns:viewModels="clr-namespace:BrawlInstaller.ViewModels" d:DataContext="{d:DesignInstance Type=viewModels:StageEditorViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentControl x:Name="StageCosmeticViewModel" Content="{Binding StageCosmeticViewModel}"/>
        <Grid x:Name="editorGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label x:Name="nameLabel" Content="Name:"/>
            <TextBox x:Name="nameTextBox" Text="{Binding Stage.RandomName}" Grid.Column="1" Width="120"/>
            <Label x:Name="entriesLabel" Content="Entries:" Grid.Row="1"/>
            <ListBox x:Name="entriesListBox" ItemsSource="{Binding Stage.Slot.StageEntries}" SelectedValue="{Binding SelectedStageEntry}" DisplayMemberPath="Name" Width="120" MinHeight="120" Grid.Column="1" Grid.Row="1"/>
            <Grid x:Name="paramsGrid" Grid.Row="1" Grid.Column="2" Visibility="{Binding SelectedStageEntry, Converter={StaticResource nullVisConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="pacNameLabel" Content="PAC Name:"/>
                <TextBox x:Name="pacNameTextBox" Text="{Binding SelectedStageEntry.Params.Name}" Grid.Column="1" Width="160"/>
                <Label x:Name="moduleLabel" Content="Module:" Grid.Row="1"/>
                <TextBox x:Name="moduleTextBox" Text="{Binding SelectedStageEntry.Params.Module}" Grid.Column="1" Grid.Row="1" Width="160"/>
                <Label x:Name="tracklistLabel" Content="Tracklist:" Grid.Row="2"/>
                <TextBox x:Name="tracklistTextBox" Text="{Binding SelectedStageEntry.Params.TrackList}" Grid.Column="1" Grid.Row="2" Width="160"/>
                <Label x:Name="soundBankLabel" Content="Soundbank:" Grid.Row="3"/>
                <TextBox x:Name="soundbankTextBox" Text="{Binding SelectedStageEntry.Params.SoundBank, Converter={StaticResource hexShortConverter}}" Grid.Row="3" Grid.Column="1" Width="60"/>
                <Label x:Name="effectBankLabel" Content="Effect Bank:" Grid.Row="4"/>
                <TextBox x:Name="effectBankTextBox" Text="{Binding SelectedStageEntry.Params.EffectBank, Converter={StaticResource hexShortConverter}}" Grid.Row="4" Grid.Column="1" Width="60"/>
                <Label x:Name="memoryAllocationLabel" Content="Memory Allocation:" Grid.Row="5"/>
                <TextBox x:Name="memoryAllocationTextBox" Text="{Binding SelectedStageEntry.Params.MemoryAllocation, Converter={StaticResource hexUIntConverter}}" Grid.Row="5" Grid.Column="1" Width="80"/>
                <Label x:Name="wildSpeedLabel" Content="Wild Speed:" Grid.Row="6"/>
                <TextBox x:Name="wildSpeedTextBox" Text="{Binding SelectedStageEntry.Params.WildSpeed}" Grid.Row="6" Grid.Column="1"/>
                <Label x:Name="characterOverlayLabel" Content="Character Overlay:" Grid.Row="7"/>
                <colorpicker:PortableColorPicker x:Name="characterOverlayPicker" Grid.Row="7" Grid.Column="1" SelectedColor="{Binding SelectedStageEntry.Params.CharacterOverlay, Mode=TwoWay, Converter={StaticResource colorRGBAConverter}}"/>
            </Grid>
            <Grid x:Name="altButtonsGrid" Grid.Column="3" Grid.Row="1" Visibility="{Binding SelectedStageEntry, Converter={StaticResource nullVisConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid x:Name="buttonsGrid" Visibility="{Binding ButtonsEnabled, Converter={StaticResource boolVisConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Content="L" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.L}}"/>
                    <CheckBox Content="R" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.R}}" Grid.Column="1"/>
                    <CheckBox Content="Z" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.Z}}" Grid.Column="2"/>
                    <CheckBox Content="Start" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.Start}}" Grid.Column="3"/>
                    <CheckBox Content="A" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.A}}" Grid.Row="1"/>
                    <CheckBox Content="B" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.B}}" Grid.Row="1" Grid.Column="1"/>
                    <CheckBox Content="X" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.X}}" Grid.Row="1" Grid.Column="2"/>
                    <CheckBox Content="Y" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.Y}}" Grid.Row="1" Grid.Column="3"/>
                    <CheckBox Content="←" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.Left}}" Grid.Row="2"/>
                    <CheckBox Content="↑" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.Up}}" Grid.Row="2" Grid.Column="1"/>
                    <CheckBox Content="→" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.Right}}" Grid.Row="2" Grid.Column="2"/>
                    <CheckBox Content="↓" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.Down}}" Grid.Row="2" Grid.Column="3"/>
                </Grid>
                <Grid x:Name="listAltsGrid" Grid.Row="1" Visibility="{Binding ListAltsEnabled, Converter={StaticResource boolVisConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <CheckBox Content="R-List Alt" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.Unused0x4000}}"
                              Visibility="{Binding RAltsEnabled, Converter={StaticResource boolVisConverter}}"/>
                    <CheckBox Content="L-List Alt" 
                          IsChecked="{Binding 
                    Path=SelectedButtonFlags, 
                    Converter={StaticResource gameCubeButtonsConverter}, 
                    ConverterParameter={x:Static enums:GameCubeButtons.Unused0x8000}}" Grid.Row="1"
                              Visibility="{Binding LAltsEnabled, Converter={StaticResource boolVisConverter}}"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
