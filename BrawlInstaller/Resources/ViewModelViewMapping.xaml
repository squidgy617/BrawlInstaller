<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:BrawlInstaller.ViewModels"
                    xmlns:views="clr-namespace:BrawlInstaller.Views"
                    xmlns:local="clr-namespace:BrawlInstaller.Resources">
    <!-- Define mapping between your view models and views -->
    <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
        <views:MainView/>
    </DataTemplate>
    <DataTemplate  DataType="{x:Type viewModels:FighterViewModel}">
        <views:FighterView/>
    </DataTemplate>
    <DataTemplate  DataType="{x:Type viewModels:FranchiseIconViewModel}">
        <views:FranchiseIconView/>
    </DataTemplate>
    <DataTemplate  DataType="{x:Type viewModels:CostumeViewModel}">
        <views:CostumeView/>
    </DataTemplate>
    <DataTemplate  DataType="{x:Type viewModels:CosmeticViewModel}">
        <views:CosmeticView/>
    </DataTemplate>
    <DataTemplate  DataType="{x:Type viewModels:FighterFileViewModel}">
        <views:FighterFileView/>
    </DataTemplate>
    <DataTemplate  DataType="{x:Type viewModels:FighterInfoViewModel}">
        <views:FighterInfoView/>
    </DataTemplate>
</ResourceDictionary>