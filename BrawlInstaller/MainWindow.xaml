<Window x:Class="BrawlInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrawlInstaller"
        xmlns:viewModels="clr-namespace:BrawlInstaller.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:WindowViewModel/>
    </Window.DataContext>
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="414" Width="780"/>
    </Grid>
</Window>
